{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@globals": ["src/components/global"],
			"@component/*": ["src/components/*"],
			"@style/*": ["src/styles/*"],
			"@lib/*": ["lib/*"],
			"@utils": ["src/components/utils"],
			"@img/*": ["src/assets/img/*"],
			"@svg/*": ["src/assets/svg/*"],
			"@icon/*": ["src/assets/svg/icon/*"]
		}
	}
}
